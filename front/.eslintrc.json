{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": [
    "simple-import-sort",
    "import",
    "sort-destructure-keys",
    "sort-keys-fix",
    "jest-extended",
    "jsx-a11y"
  ],
  "extends": [
    "react-app/jest",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:storybook/recommended",
    "airbnb",
    "airbnb-typescript",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/naming-convention": [
      2,
      {
        "format": ["camelCase", "PascalCase", "UPPER_CASE"],
        "leadingUnderscore": "allow",
        "selector": "variableLike"
      },
      {
        "format": ["camelCase", "PascalCase", "UPPER_CASE"],
        "leadingUnderscore": "allow",
        "selector": "memberLike"
      }
    ],
    "@typescript-eslint/no-explicit-any": 2,
    "import/no-extraneous-dependencies": 0,
    "import/no-default-export": 2,
    "import/prefer-default-export": 0,
    "simple-import-sort/exports": 2,
    "simple-import-sort/imports": [
      2,
      {
        "groups": [
          ["^\\u0000"],
          ["^fs$", "^path$", "^crypto$"],
          ["^@?\\w"],
          ["^@nestjs"],
          ["^@fc/"],
          ["^"],
          ["^\\."]
        ]
      }
    ],
    "jsx-a11y/label-has-associated-control": [1, { "assert": "htmlFor" }],
    "react/react-in-jsx-scope": 0,
    "react/jsx-closing-bracket-location": [2, { "nonEmpty": "after-props", "selfClosing": false }],
    "react/jsx-fragments": [2, "element"],
    "react/jsx-key": 2,
    "react/jsx-indent": [2, 2, { "checkAttributes": false, "indentLogicalExpressions": true }],
    "react/display-name": [2, { "ignoreTranspilerName": false }],
    "react/jsx-props-no-spreading": 1,
    "react/button-has-type": 0,
    "react/jsx-sort-props": [
      2,
      {
        "noSortAlphabetically": false,
        "ignoreCase": true,
        "callbacksLast": true,
        "shorthandFirst": true,
        "reservedFirst": true
      }
    ],
    "sort-keys-fix/sort-keys-fix": 2,
    "sort-destructure-keys/sort-destructure-keys": 2,
    "sort-keys": [2, "asc", { "caseSensitive": true, "natural": false, "minKeys": 2 }],
    "testing-library/prefer-screen-queries": 0,
    "testing-library/no-node-access": 0,
    "testing-library/no-wait-for-multiple-assertions": 0,
    "testing-library/no-container": 0,
    "react/function-component-definition": 0,
    "react/jsx-no-constructed-context-values": 0
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.js"],
      "rules": {
        "jsx-a11y/label-has-associated-control": 0,
        "react/react-in-jsx-scope": 0,
        "react/jsx-closing-bracket-location": 0,
        "react/jsx-fragments": 0,
        "react/jsx-indent": 0,
        "react/display-name": 0,
        "react/jsx-props-no-spreading": 0,
        "react/button-has-type": 0,
        "react/jsx-sort-props": 0
      }
    },
    {
      "files": ["*.stories.tsx"],
      "rules": {
        "import/no-default-export": 0,
        "react/jsx-props-no-spreading": 0
      }
    },
    {
      "files": ["**/*.spec.ts"],
      "rules": {
        "@typescript-eslint/dot-notation": 0
      }
    }
  ]
}
